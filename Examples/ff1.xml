<?xml version="1.0"?>
<!-- Test file: Flocker Project, Case 5 -->
<!-- A flocker with following force looks a lot like a follower -->

<world xmlns="http://perceptualscience.rutgers.edu/flocking"
   width="500" height="500" time="100" debug="true">
<defaults>
   <flocker 
         follow="true" debug="true"
         clear="true" evade="true" align="true" center="true" />
</defaults>
   <!-- the flocker should follow the lights -->
   <flocker x="100" y="250" heading="50" />
   <light  x="350" y="150" heading="0" r="100" g="200" b="100" />
   <light  x="400" y="400" heading="0" r="200" g="100" b="100" />
</world>

